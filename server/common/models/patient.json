    },
    "treatments": {
      "type": "hasMany",
      "model": "Treatment",
      "foreignKey": "patientId"
    },
    "prescriptions": {
      "type": "hasMany",
      "model": "Prescription",
      "foreignKey": "patientId"
    },
    "charts": {
      "type": "hasMany",
      "model": "Chart",
      "foreignKey": "patientId"
    },
    "images": {
      "type": "hasMany",
      "model": "Image",
      "foreignKey": "patientId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
