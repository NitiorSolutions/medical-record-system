{
  "name": "Patient",
  "plural": "Patients",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": {}
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "middleName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "age": {
      "type": "number",
      "required": true
    },
    "sex": {
      "type": "string",
      "required": true
    },
    "civilStatus": {
      "type": "string",
      "required": true
    },
    "occupation": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "contactNumber": {
      "type": "string",
      "required": true
    },
    "dateRegistered": {
      "type": "date",
      "required": true
    },
    "active": {
      "type": "boolean",
